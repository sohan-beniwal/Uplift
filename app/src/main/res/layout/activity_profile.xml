<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.DonateActivity">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar"
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/profile_screen_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/profile_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:paddingRight="15dp"
            android:text="NAME"
            android:textColor="@color/app_bar_color"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

        </TextView>

        <TextView
            android:id="@+id/nameEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Ishika"
            android:textSize="18dp"
            android:textColor="@color/app_bar_color"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:backgroundTint="@color/app_bar_color"
            app:layout_constraintEnd_toStartOf="@id/editIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_tv1" />

        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/edit_pencil_img"
            android:contentDescription="Edit Icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nameEdit"
            app:layout_constraintBottom_toBottomOf="@+id/nameEdit" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="4dp"
            android:background="@color/app_bar_color"
            app:layout_constraintStart_toStartOf="@+id/nameEdit"
            app:layout_constraintEnd_toEndOf="@+id/nameEdit"
            app:layout_constraintTop_toBottomOf="@+id/nameEdit" />

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_goneMarginTop="5dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:text="EMAIL"
            android:textSize="16dp"
            android:textColor="@color/app_bar_color"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/nameEdit"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:text="abc@example.com"
            android:textSize="18dp"
            android:textColor="@color/app_bar_color"
            app:layout_constraintTop_toBottomOf="@id/emailLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:background="@color/app_bar_color"
            app:layout_constraintTop_toBottomOf="@+id/emailText">

        </View>

        <TextView
            android:id="@+id/mobile_no_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOBILE NO."
            android:textColor="@color/app_bar_color"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_goneMarginTop="5dp" />

        <TextView
            android:id="@+id/mob_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:text="9999999999"
            android:textColor="@color/app_bar_color"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mobile_no_tv" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@color/app_bar_color"
            app:layout_constraintTop_toBottomOf="@+id/mob_tv"
            tools:layout_editor_absoluteX="67dp">

        </View>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDRESS"
            android:textColor="@color/app_bar_color"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3">

        </TextView>

        <TextView
            android:id="@+id/profile_tv5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="address"
            android:textSize="18dp"
            android:textColor="@color/app_bar_color"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:backgroundTint="@color/app_bar_color"
            app:layout_constraintEnd_toStartOf="@id/edit_pencil_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageView
            android:id="@+id/edit_pencil_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="20dp"
            android:contentDescription="Edit Icon"
            android:src="@drawable/edit_pencil_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile_tv5"
            app:layout_constraintBottom_toBottomOf="@id/profile_tv5" />
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp"
            android:background="@color/app_bar_color"
            app:layout_constraintTop_toBottomOf="@+id/profile_tv5"
            tools:layout_editor_absoluteX="35dp">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            android:weightSum="2"
            android:layout_marginTop="50dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Save"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/app_bar_text"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Cancel"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="@drawable/blue_outline_rounded_button"
                android:textColor="@color/app_bar_color"/>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:itemTextColor="@color/app_bar_color"
        app:itemIconTint="@color/app_bar_color"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>
