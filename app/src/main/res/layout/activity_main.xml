<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, xyz \u2764\uFE0F"
        android:textStyle="bold"
        android:textColor="@color/app_bar_color"
        android:textSize="25sp"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"/>

    <ImageSwitcher
        android:id="@+id/imageSwitcher"
        android:layout_width="match_parent"
        android:layout_height="220sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username" />



    <TextView
        android:id="@+id/readytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to Donate?"
        android:textStyle="bold"
        android:textColor="@color/app_bar_color"
        android:textSize="25sp"
        app:layout_goneMarginTop="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageSwitcher"
        android:layout_marginTop="10sp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- GridLayout -->
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:columnCount="2"
            android:padding="8dp"
            android:rowCount="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_donate">

            <!-- First Image -->
            <ImageView
                android:id="@+id/image1"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/food_logo" />

            <!-- Second Image -->
            <ImageView
                android:id="@+id/image2"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:contentDescription="Image 2"
                android:padding="8dp"
                android:src="@drawable/cloth_logo" />

            <!-- Third Image -->
            <ImageView
                android:id="@+id/image3"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:contentDescription="Image 3"
                android:padding="8dp"
                android:src="@drawable/money_logo" />

            <!-- Fourth Image -->
            <ImageView
                android:id="@+id/image4"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:contentDescription="Image 4"
                android:padding="8dp"
                android:src="@drawable/other_logo" />
        </GridLayout>

        <!-- Button -->
        <Button
            android:id="@+id/btn_donate"
            android:layout_width="154dp"
            android:layout_height="70sp"
            android:backgroundTint="@color/red"
            android:text="Donate"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/gridLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
