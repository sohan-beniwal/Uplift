<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spinner_background"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:padding="16dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2">

        <!-- Category -->
        <TextView
            android:id="@+id/list_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:gravity="start"
            android:text="Category"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="20sp" />

        <!-- Day and Time -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:textColor="@color/app_bar_color"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Time"
                android:layout_marginEnd="8dp"
                android:textColor="@color/app_bar_color"
                android:textStyle="bold"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/options_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/list_item_options"
                android:contentDescription="Menu Icon" />
        </LinearLayout>

        <!-- Name -->
        <TextView
            android:id="@+id/list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:gravity="start"
            android:text="Name"
            android:textColor="@color/app_bar_color"
            android:textStyle="bold"
            android:textSize="20sp" />

        <!-- Mobile number -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:id="@+id/list_status"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:gravity="end"
            android:layout_marginEnd="25dp"
            android:text="Status"
            android:textColor="@color/app_bar_color"
            android:textStyle="bold"
            android:textSize="20sp" />
    </GridLayout>
    <TextView
        android:id="@+id/list_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/app_bar_color">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/list_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            android:layout_weight="1"
            >
        </ImageView>
        <ImageView
            android:id="@+id/list_directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/directions"
            android:layout_weight="1"
            >
        </ImageView>
    </LinearLayout>
</LinearLayout>
